


<h2>New book</h2>
  
 <%= form_with model: @book, local:true do |f| %>
 <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
 </div>
 
 <div class="field">
  <%= f.label :body, "Opinition" %>
  <%= f.text_area :body %>
 </div>
 
 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>

<% end %>
    
    
<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>image</th>
   <th>name</th>
    <th colspan="3"></th>
  </tr>
  </thead>
 
  <tbody>
   <% @users.each do |user| %>
    <tr>
     <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
     </td>
     <td><%= user.name %></td>
     <td><%= link_to "Show" ,  user %></td>
    </tr>
   <% end %>
  </tbody>
</table>
