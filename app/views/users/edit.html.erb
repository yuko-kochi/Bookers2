<p id="notice">
 <% if flash[:notice] %>
  <%= flash[:notice] %>
 <% end %>
</p>

<div class="container">
  <div class="row">
    <div class="col-md-12 col-md-8 col-lg-5 px-5 px-sm-o mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: 'form-control user_name' %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "ProfileImage" %>
        <%= f.attachment_field :profile_image, class: 'form-control user_profile_image' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "Introduction" %>
        <%= f.text_area :introduction, class: 'form-control user_name' %>
      </div>
      <div class="form-group">
       <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>