<h2>New book</h2>

 <%= form_with model: @book, local:true do |f| %>
 <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
 </div>

 <div class="field">
  <%= f.label :body, "Opinition" %>
  <%= f.text_area :body %>
 </div>

 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>

<% end %>


<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th colspan="1"></th>
   <th>Title</th>
   <th>Opinition</th>
  </tr>
  </thead>

  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td>
       <%= link_to book_path(book) do %>
        <%= book.title %>
       <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
   <% end %>
  </tbody>
</table>



