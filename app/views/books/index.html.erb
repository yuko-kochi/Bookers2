   <p id="notice">
    <% if flash[:notice] %>
     <%= flash[:notice] %>
    <% end %>
   </p>

   <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
    <div id= error_explanation >
     <h2><%= pluralize(@book.errors.count, "error") %> prohibited this  obj from being saved:</h2>
     <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
     </ul>
    </div>
    <% end %>

    <div class="row">
     <div class="clo-md-3">
       <%= render 'books/new', book: @book %>
     </div>

     <div class="clo-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table table-hnover table-inverse">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinition</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       <tbody>
        <% @books.each do |book| %>
        <tr>
         <td>
          <%= link_to user_path(current_user.id)do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %> <br>
          <% end %>
         </td>
         <td>
          <%= link_to book_path(book) do %>
           <%= book.title %>
          <% end %>
         </td>
         <td><%= book.body %></td>
        </tr>
       <% end %>
       </tbody>
      </table>
     </div>
    </div>
   </div>
