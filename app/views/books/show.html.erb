<p id="notice">
 <% if flash[:notice] %>
  <%= flash[:notice] %>
 <% end %>
</p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@user) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %> <br>
             <%= @books.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@books) do %>
             <%= @books.title %>
            <% end %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <td></td>
          <% if @books.user == current_user %>
            <td> <%= link_to "Edit" , edit_book_path(@books), class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: '本当に消しますか？'} %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>


