<%= render 'books/new', post_images: @books %>

<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id)do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %> <br>
        <%= @book.user.name %>
        <% end %>
      </td>
      <td>
       <%= link_to book_path(@book) do %>
       <%= @book.title %>
       <% end %>
      </td>
      <td><%= @book.body %></td>
      <td>
      </td>
      <td>
        <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: '本当に消しますか？'} %>
      </td>
    </tr>
  </tbody>
</table>
