<%= render 'books/new', book: @book %>

<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <%= link_to user_path(current_user.id)do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %> <br>
        <%= @books.user.name %>
        <% end %>
      </td>
      <td>
       <%= link_to book_path(@books) do %>
       <%= @books.title %>
       <% end %>
      </td>
      <td><%= @books.body %></td>
      <td> <%= link_to "Edit" , edit_book_path(@books) %></td>
      <td>
        <%= link_to "Destroy", book_path(@books), method: :delete, data: {confirm: '本当に消しますか？'} %>
      </td>
    </tr>
  </tbody>
</table>
