<h2>New book</h2>

 <%= form_with model: @book, local:true do |f| %>
 <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
 </div>

 <div class="field">
  <%= f.label :body, "Opinition" %>
  <%= f.text_area :body %>
 </div>

 <div class="actions">
  <%= f.submit 'Create Book' %>
 </div>

<% end %>